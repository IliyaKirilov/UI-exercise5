<mvc:View controllerName="kpmg.home.Exercise5.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="CRUD operations for my first time">
					<content>
						<VBox xmlns="sap.m" id="vboxid">
							<items>
								<HBox xmlns="sap.m">
									<items>
										<Button xmlns="sap.m" id="cbtn" press="oDataCall" text="Create"></Button>
										<Button xmlns="sap.m" id="rbtn" press="oDataCall" text="Read"></Button>
										<Button xmlns="sap.m" id="ubtn" press="oDataCall" text="Update"></Button>
										<Button xmlns="sap.m" id="dbtn" press="oDataCall" text="Delete"></Button>
									</items>
								</HBox>
								<HBox xmlns="sap.m">
									<items>
										<Input xmlns="sap.m" id="uniqueid" placeholder="ID" ></Input>
										<Input xmlns="sap.m" id="nameid" placeholder="Name" ></Input>
										<Input xmlns="sap.m" id="emailid" placeholder="Email" ></Input>
										<Input xmlns="sap.m" id="mobid" placeholder="Mobile" ></Input>
									</items>
								</HBox>
								<HBox xmlns="sap.m">
									<items>
										<Table xmlns="sap.m" items="{ path: 'myModel>/userdataSet'}" headerText="User Data">
											<columns>
												<Column xmlns="sap.m">
													<Text text="Id"/>
												</Column>
												<Column xmlns="sap.m">
													<Text text="Name"/>
												</Column>
												<Column xmlns="sap.m">
													<Text text="Email"/>
												</Column>
												<Column xmlns="sap.m">
													<Text text="Mobile"/>
												</Column>
											</columns>
											<ColumnListItem>
												<cells>
													<Text text="{myModel>Id}"/>
													<Text text="{myModel>Name}"/>
													<Text text="{myModel>Email}"/>
													<Text text="{myModel>Mobile}"/>
												</cells>
											</ColumnListItem>
										</Table>
									</items>
								</HBox>
							</items>
						</VBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>